#!/bin/sh
# prerm script for wasta-winshare
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <prerm> `remove'
#        * <old-prerm> `upgrade' <new-version>
#        * <new-prerm> `failed-upgrade' <old-version>
#        * <conflictor's-prerm> `remove' `in-favour' <package> <new-version>
#        * <deconfigured's-prerm> `deconfigure' `in-favour'
#          <package-being-installed> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    upgrade|deconfigure)
        echo
        echo "*** Cleaning up wasta-winshare crontab settings"
        echo

        # remove /etc/crontab entries
        sed -i -e '\@#wasta-winshare@d' \
               /etc/crontab

        echo
        echo "*** Disabling wasta-winshare systemd service"
        echo
        deb-systemd-invoke disable wasta-winshare
    ;;

    remove)
        echo
        echo "*** Cleaning up wasta-winshare lightdm and crontab settings"
        echo

        # remove any lightdm login script (possibly installed in postinst)
        rm -f /etc/lightdm/lightdm.conf.d/*wasta-winshare*

        # remove /etc/crontab entries
        sed -i -e '\@#wasta-winshare@d' \
               /etc/crontab

        echo
        echo "*** Cleaning up wasta-winshare fstab settings"
        echo
        # remove /etc/fstab entries
        sed -i -e '\@#wasta-winshare@d' \
               /etc/fstab

        echo
        echo "*** Disabling wasta-winshare systemd service"
        echo
        deb-systemd-invoke disable wasta-winshare
    ;;

    failed-upgrade)
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
